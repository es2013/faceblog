<article class="post">
  <div class="title">
    <p>{{post.title}}</p>
  </div>
  <div class="body">
    <p>{{post.post_body}}</p>
  </div>
  <div class="meta">
    Blog by {{post.user.username}} on
    {{post.created_at}}
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<h1>Comments should be here</h1>
{{>comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}